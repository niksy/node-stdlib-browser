{
	"root": true,
	"extends": [
		"eslint-config-niksy",
		"eslint-config-niksy/typescript",
		"eslint-config-niksy/next",
		"eslint-config-prettier"
	],
	"plugins": ["eslint-plugin-prettier", "eslint-plugin-unicorn"],
	"globals": {
		"globalThis": false
	},
	"settings": {
		"jsdoc": {
			"preferredTypes": ["esbuild"]
		}
	},
	"rules": {
		"prettier/prettier": 1,
		"camelcase": 0,
		"unicorn/prefer-flat-map": 0,
		"unicorn/prevent-abbreviations": [
			1,
			{
				"allowList": {
					"stdLibBrowser": true
				}
			}
		]
	},
	"overrides": [
		{
			"files": "mock/*.js",
			"env": {
				"browser": true
			}
		},
		{
			"files": ["rollup.config.js", "helpers/**/plugin.js"],
			"parserOptions": {
				"sourceType": "script"
			},
			"rules": {
				"no-console": 0
			}
		},
		{
			"files": ["helpers/**/shim.js"],
			"rules": {
				"no-undef": 0
			}
		},
		{
			"files": ["rollup.config.js", "test/index.js"],
			"plugins": ["eslint-plugin-unicorn"],
			"rules": {
				"unicorn/numeric-separators-style": 0
			}
		}
	]
}
